<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Название</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.title %></td>
        <td style="width: 100px"><%= link_to 'Редактировать', edit_category_path(category), class: 'btn btn-outline-primary' %></td>
        <td style="width: 100px"><%= button_to 'Удалить', category_path(category), method: :delete, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_category_path, class: 'btn btn-primary' %>
