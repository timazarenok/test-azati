<table class='table'>
  <thead>
    <tr>
      <th>Название</th>
      <th>Дата события</th>
      <th>Описание</th>
      <th>Категория</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.description %></td>
        <td><%= event.category.title %></td>
        <td><%= link_to 'Подробнее', event, class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Редактировать', edit_event_path(event), class: 'btn btn-outline-primary' %></td>
        <td><%= button_to 'Удалить', event_path(event), method: :delete, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_event_path, class: "btn btn-primary" %>
