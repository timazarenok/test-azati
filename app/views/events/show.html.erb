<div class='container'>
  <div class='row'>
    <div class='col-6'>
      <h1><%= @event.title %></h1>
      <p><%= @event.description %></p>
      <p>
        <strong>Дата:</strong>
        <%= @event.date %>
      </p>
      <div class='d-flex mt-2'>
        <%= link_to 'Редактировать', edit_event_path(@event), class: 'btn btn-primary me-2' %>
        <%= button_to 'Удалить', event_path(@event), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
    <div class='col-6'>
      <h1>Погода в этот день</h1>
      <p>Информация недоступна</p>
      <strong>Category:</strong>
      <%= @event.category.title %>
    </div>
  </div>
</div>
